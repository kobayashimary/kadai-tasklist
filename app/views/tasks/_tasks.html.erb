<h1>My Tasklist</h1>


  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>タスク</th>
        <th>ステータス</th>
      </tr>
    </thead>  
    <tbody>
      <% tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <%end%>
    </tbody>
  </table>  
  <div>
    <%=paginate tasks %>
  </div>


<%= link_to 'Add new task', new_task_path , class: "btn btn-primary" %>