<% if logged_in? %>
  <div class="row">
    <%= render 'tasks/tasks',tasks: @tasks %>
  </div>
  <% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Kadai Tasklist</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>